# Application
APP_NAME=LinkedIn Insights Microservice
DEBUG=True

# Database (PostgreSQL - Required for the single-file implementation)
# Ensure PostgreSQL is running locally on port 5432 with these credentials.
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/linkedin_insights

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# LinkedIn API (Currently Mocked in the Python code)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_ACCESS_TOKEN=

# OpenAI API (Currently Mocked in the Python code)
OPENAI_API_KEY=

# AWS S3 Storage (Currently Mocked in the Python code)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=linkedin-insights-storage
AWS_REGION=us-east-1

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100